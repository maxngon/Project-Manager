@using WebApplication1.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<NhaSanXuat>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/View1.cshtml";
}

<h2>Quản lý nhà sản xuất</h2>
<div class="page-wrapper">
    <table width="100" class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>
                    Mã nhà sản xuất
                </th>
                <th>
                    Tên nhà sản xuất
                </th>             
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="odd gradeX">

                    <td>
                        @item.MaNhaSanXuat
                    </td>
                    <td>

                        @item.TenNhaSanXuat
                    </td>                 

                    <td>

                        <a href="@Url.Action("Editnhasx", new { id = int.Parse(item.MaNhaSanXuat) })" class="btn btn-primary">
                            Sửa
                        </a>                
                        <a href="@Url.Action("Deletenhasx", new { id = int.Parse(item.MaNhaSanXuat) })" class="btn btn-danger">
                            Xóa
                        </a>
                    </td>
                </tr>
            }
    </table>
    <a href="@Url.Action("Creatensx", "NhaCungCap") " class="btn btn-success">
        Thêm Nhà sản xuất
    </a>


</div>
<footer>
    <div class="MenuTrang" style="text-align:center;">
        trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action
                      ("Index", new { page = page })) <br />
    </div>
    <style>
        .MenuTrang li {
            display: inline;
        }
    </style>

</footer>



