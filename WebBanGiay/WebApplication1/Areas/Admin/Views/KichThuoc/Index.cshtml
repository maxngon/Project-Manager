@using WebApplication1.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<KichThuoc>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/View1.cshtml";
}

<h2>Quản lý kích thước</h2>
<div class="page-wrapper">
    <table width="100" class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>
                    Mã kích thước
                </th>
                <th>
                    Mô tả kích thước
                </th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="odd gradeX">

                    <td>
                        @item.MaKichThuoc
                    </td>
                    <td>

                        @item.MoTaSize
                    </td>

                    <td>

                        <a href="@Url.Action("Editkt", new { id = int.Parse(item.MaKichThuoc) })" class="btn btn-primary">
                            Sửa
                        </a>
                        <a href="@Url.Action("Deletekt", new { id = int.Parse(item.MaKichThuoc) })" class="btn btn-danger">
                            Xóa
                        </a>
                    </td>
                </tr>
            }
    </table>
    <a href="@Url.Action("Createkt", "KichThuoc") " class="btn btn-success">
        Thêm Kích thước
    </a>


</div>
<footer>
    <div class="MenuTrang" style="text-align:center;">
        trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action
                      ("Index", new { page = page })) <br />
    </div>
    <style>
        .MenuTrang li {
            display: inline;
        }
    </style>

</footer>


